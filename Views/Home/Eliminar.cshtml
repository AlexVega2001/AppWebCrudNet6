@model AppWebMvcCore.Models.Client

@{
    ViewData["title"] = "Eliminar Cliente";
}

<div class="row"> 
    <div class="col-sm-6 m-auto">
        <div class="card border">
            <div class="card-header">
                <h3 class="text-center">Eliminar Cliente</h3>
            </div>
            <div class="card-body">
                <form asp-controller="Home" asp-action="EliminarCliente" method="post">

                  <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                  @*Enviar id del cliente como campo oculto*@
                  <input type="hidden" asp-for="IdClient" />

                  <div class="mb-3">
                    <label asp-for="Name" class="control-label">Nombre</label>
                    <input asp-for="Name" class="form-control" id="Name" readonly>
                    <span asp-validation-for="Name" class="text-danger"></span>
                  </div>
                  <div class="mb-3">
                    <label asp-for="LastName" class="control-label">Apellido</label>
                    <input asp-for="LastName" class="form-control" id="LastName" readonly>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                  </div>
                  <div class="mb-3">
                    <label asp-for="Dni" class="control-label">Cédula</label>
                    <input asp-for="Dni" class="form-control" id="Dni" readonly>
                    <span asp-validation-for="Dni" class="text-danger"></span>
                  </div>
                  <div class="mb-3">
                    <label asp-for="Email" class="control-label">Correo</label>
                    <input asp-for="Email" type="email" class="form-control" id="Email" readonly>
                    <span asp-validation-for="Email" class="text-danger"></span>
                  </div>
                  <div class="mb-3">
                    <label asp-for="Address" class="control-label">Dirección</label>
                    <input asp-for="Address" class="form-control" id="Address" readonly>
                    <span asp-validation-for="Address" class="text-danger"></span>
                  </div>

                  <div class="form-group">
                     <a class="btn btn-secondary" asp-action="Index">
                         <i class="fa-solid fa-right-to-bracket"></i> Volver al Inicio
                     </a>
                     <button type="submit" class="btn btn-danger">
                         <i class="fa-solid fa-user-xmark"></i> Eliminar Cliente
                     </button>
                  </div>

                </form>
            </div>
        </div>
    </div>
</div>